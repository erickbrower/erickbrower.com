<h2>Write Something </h2>
{{#if errors}}
    <div class="alert alert-danger" role="alert">
        <ul>
            {{#each errors}}
                <li>{{this.message}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}

<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" action="/admin/articles/new" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="input-title" name="title" placeholder="My Awesome Post!">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="input-text" name="text" style="height: 400px"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg">Save</button>
            </div>
        </form>
    </div>
</div>

